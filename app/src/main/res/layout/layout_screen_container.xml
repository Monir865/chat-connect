<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/screen_container_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="24dp"
        android:src="@drawable/ic_app_logo"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/screen_container_title"
        android:contentDescription="App logo" />

    <TextView
        android:id="@+id/screen_container_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seamless Chat Connection"
        android:textSize="24sp"
        android:fontFamily="sans-serif-medium"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_centerInParent="true"
        android:layout_marginTop="16dp"
        android:textAlignment="center"
        android:contentDescription="Seamless Chat Connection title" />

    <TextView
        android:id="@+id/screen_container_para"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Connect with friends and colleagues instantly through our reliable chat platform. Start conversations, share moments, and stay connected with ease, no matter where you are."
        android:textSize="18sp"
        android:fontFamily="sans-serif-light"
        android:textColor="#666666"
        android:lineSpacingExtra="4dp"
        android:layout_below="@id/screen_container_title"
        android:layout_marginTop="12dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:contentDescription="Description of seamless chat connection feature" />
</RelativeLayout>
