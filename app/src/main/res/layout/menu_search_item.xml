<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/search_product_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:paddingStart="10dp"
        android:paddingEnd="30dp"
        android:ems="10"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_weight="1"
        android:hint="Search"
        android:background="@drawable/search_edittext_background"
        android:inputType="text"
        android:layout_centerVertical="true"/>

    <Button
        android:id="@+id/search_product_button"
        android:layout_width="30dp"
        android:layout_height="32dp"
        android:layout_alignEnd="@+id/search_product_edit_text"
        android:layout_centerVertical="true"
        android:layout_marginStart="329dp"
        android:layout_marginEnd="11dp"
        android:background="@drawable/icons8_search_50"
        android:gravity="center"
        android:padding="8dp"
        android:textStyle="bold"
        />

</RelativeLayout>

